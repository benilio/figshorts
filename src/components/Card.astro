---
interface Props {
  title: string
  url: string
  description: string
  emoji: string
  emojiDescription: string
  bgColor: string
}

const { title, url, description, emoji, emojiDescription, bgColor } =
  Astro.props
---

<a href={'/' + url} class="card">
  <div>
    <h4>{title}</h4>
    <p>
      {description}
    </p>
  </div>
  <div class="card-decoration">
    <span role="img" aria-label={`${emojiDescription} emoji`}>{emoji}</span>
  </div>
</a>

<style define:vars={{ bgColor }}>
  :root {
    --clr-bg: var(--clr-gray-150);
    --clr-fg: var(--clr-gray-700);
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 1.5rem 2rem;
    border-radius: 1rem;
    width: calc((100% - 2rem) / 2);
    height: calc((100% - 2rem) / 2);

    color: var(--clr-fg);
    background: var(--clr-bg);
    border: 0.3rem solid hsla(0, 0%, 0%, 0.3);

    cursor: pointer;
    overflow: hidden;

    transition: all 500ms;
  }

  .card:hover {
    color: var(--clr-gray-200);
    background: var(--bgColor);
    border: 0.3rem solid hsla(0, 0%, 0%, 0.15);
  }

  .card:hover .card-decoration {
    opacity: 0.3;
    //display: none;
    //top: 50%;
    //right: 50%;
    //transform: translate(-50%, -50%) scale(10);
    //filter: blur(5rem);
    //margin: 0 auto;
    //z-index: -99;
  }

  .card-decoration {
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(30%, 0);
    font-size: 16rem;

    transition: all 500ms;
  }

  h4 {
    font-size: 2.5rem;
    font-weight: 500;
  }

  p {
    font-size: 1.5rem;
    font-weight: 350;
    text-wrap: balance;
  }
</style>
