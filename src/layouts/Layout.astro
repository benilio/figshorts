---
import Header from '../components/Header.astro'
interface Props {
  title?: string
}

const { title } = Astro.props

import '../styles/global.css'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,200..800&family=Inter:wght@100..900&family=Spline+Sans+Mono:ital,wght@0,300..700;1,300..700&display=swap"
      rel="stylesheet"
    />
    <title>Figshorts{title ? ` | ${title}` : null}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  body {
    margin: 0 auto;
    padding: 4rem;
    width: 100%;
    max-width: 85.375rem;
  }

  h2 {
    font-size: 1.75rem;
    font-weight: 500;
  }

  h3 {
    //position: sticky;
    //top: 0;
    padding: 0.5rem 1rem;
    color: var(--clr-gray-400);
    font-size: 1.25rem;
    font-weight: 500;
  }
</style>
